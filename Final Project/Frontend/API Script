<script type="module">
        const homePage = document.getElementById('home-content');
        const resp = await fetch('http://localhost:5257/api/food/getFoodData', fetchOptions);
        const data = await resp.json();

            for (const row of data) {
                homePage.innerHTML += createListing(
                    row.name,
                    row.calories,
                    row.fat,
                    row.protein,
                    row.carbs,
                    row.quantity
                    
                );
            }

    function createListing(name, calories, fat, protein, carbs, quantity) {
        const template =
            `<div class="food-listing">
                <h3>${name}</h3>
                <p>${calories}, ${fat}, ${protein}, ${carbs}, ${quantity}</p>
                <button onclick="addToDiary('${name}')">Add to Diary</button>
            </div>`;

        return template;
    }

    function addToDiary(name) {
        // Add logic to handle adding to diary
        alert(`Added ${name} to diary`);
    }

    function showContent(id) {
        const contents = document.querySelectorAll('.content');
        contents.forEach(content => {
            if (content.id === id) {
                content.style.display = 'block';
            } else {
                content.style.display = 'none';
            }
        });
    }

        

    </script>